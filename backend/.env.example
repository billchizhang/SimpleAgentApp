# OpenAI API Configuration
# Copy this file to .env and add your actual API key
# Get your API key from: https://platform.openai.com/api-keys

OPENAI_API_KEY=sk-your-api-key-here

# Optional: Customize model (default: gpt-4o)
# OPENAI_MODEL=gpt-4o

# Optional: Customize max iterations (default: 5)
# MAX_ITERATIONS=5

# Optional: Enable/disable ReAct reasoning (default: true)
# USE_REACT=true

# Optional: Custom tool registry path (default: ./tool_registry)
# TOOL_REGISTRY_PATH=./tool_registry

# Database Configuration
# SQLite database path for user authentication (default: data/users.db)
DB_PATH=data/users.db
